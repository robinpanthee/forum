pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                //echo"  MF"
                sh "composer install --no-interaction"
                sh "npm install"
                sh "npm run prod"
            }
        }
        stage('Test') { 
            steps {
                sh "./vendor/bin/phpunit"
            }
        }
        stage('Deploy') { 
            steps {
                echo "Deploying MF DONE OK"
            }
        }
    }
}